<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="iconPadding">@dimen/label_indentation_from_the_text</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:layout_marginLeft">@dimen/indentation_from_the_edges_of_the_screen</item>
        <item name="android:layout_marginRight">@dimen/indentation_from_the_edges_of_the_screen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_padding</item>
        <item name="android:paddingBottom">@dimen/settings_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/EditTextHeigth</item>
        <item name="android:layout_marginLeft">@dimen/SearchEditTextStyleMarginLeft</item>
        <item name="android:layout_marginRight">@dimen/SearchEditTextStyleRight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:hint">@string/input_hint</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:maxLength">30</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textColorHint">?attr/colorContainer</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="SearchSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/SearchHeight</item>
        <item name="tint">?attr/colorContainer</item>
        <item name="android:src">@drawable/searchvector</item>
        <item name="android:layout_marginStart">@dimen/SearchCloseMarginLeft</item>
    </style>

    <style name="SearchCloseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/SearchHeight</item>
        <item name="android:src">@drawable/close</item>
        <item name="tint">?attr/colorContainer</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/SearchCloseMarginRight</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recycle_tracks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/Indent_24dp</item>
    </style>

    <style name="ImageCoverTrackView">
        <item name="android:layout_width">@dimen/CoverSize</item>
        <item name="android:layout_height">@dimen/CoverSize</item>
        <item name="android:layout_marginTop">@dimen/Indent_8dp</item>
        <item name="android:layout_marginLeft">@dimen/Indent_13dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/Indent_66dp</item>
        <item name="android:layout_marginTop">@dimen/Indent_14dp</item>
        <item name="android:layout_marginRight">@dimen/Indent_44dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="singleLine">true</item>
    </style>

    <style name="point_song">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/point</item>
    </style>

    <style name="SongNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="singleLine">true</item>
    </style>

    <style name="arrow_forward_song">
        <item name="android:layout_width">@dimen/Indent_8dp</item>
        <item name="android:layout_height">@dimen/Indent_14dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/Indent_20dp</item>
        <item name="android:layout_marginTop">@dimen/Indent_23dp</item>
        <item name="android:src">@drawable/arrow_forward</item>
    </style>

    <style name="foundNothingPlaceholderStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/Indent_20dp</item>
        <item name="android:text">@string/nothingFound</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="communicationProblemsPlaceholderStyle">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="updateButtonStyle">
        <item name="android:layout_marginTop">@dimen/Indent_24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/update</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?attr/android:button</item>
        <item name="android:textColor">?attr/android:text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="clearHistoryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?attr/android:text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">?attr/android:button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="DataTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Indent_8dp</item>
        <item name="android:layout_marginBottom">@dimen/Indent_8dp</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/Indent_8dp</item>
        <item name="android:layout_marginBottom">@dimen/Indent_8dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <!--  -->

    <style name="HeadStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="AudioPlayerImage">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="AudioPlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AudioPlayerArtist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AudioPlayerContentName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#AEAFB4</item>
    </style>

    <style name="AudioPlayerContentText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>